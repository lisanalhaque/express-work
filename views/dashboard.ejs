<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Management Dashboard</title>
    <link rel="stylesheet" href="/style.css">
    <style>
        .dashboard-container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .dashboard-header {
            text-align: center;
            color: white;
            margin-bottom: 3rem;
        }

        .dashboard-header h1 {
            font-size: 3rem;
            margin-bottom: 0.5rem;
        }

        .dashboard-header p {
            font-size: 1.2rem;
            opacity: 0.9;
        }

        .dashboard-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            margin-bottom: 3rem;
        }

        .dashboard-section {
            background: white;
            border-radius: 8px;
            padding: 2rem;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .dashboard-section h2 {
            color: #2c3e50;
            margin-top: 0;
            border-bottom: 3px solid #667eea;
            padding-bottom: 1rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .section-icon {
            font-size: 1.5rem;
        }

        .stats {
            display: flex;
            justify-content: space-around;
            margin-bottom: 2rem;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .stat-box {
            text-align: center;
            padding: 1rem;
        }

        .stat-number {
            font-size: 2rem;
            font-weight: bold;
            color: #667eea;
        }

        .stat-label {
            color: #666;
            font-size: 0.9rem;
            margin-top: 0.5rem;
        }

        .quick-actions {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }

        .quick-actions .btn {
            flex: 1;
            min-width: 150px;
            text-align: center;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

        .table-container {
            overflow-x: auto;
        }

        .mini-table {
            width: 100%;
            border-collapse: collapse;
            font-size: 0.9rem;
        }

        .mini-table th {
            background-color: #f5f5f5;
            color: #2c3e50;
            padding: 1rem;
            text-align: left;
            font-weight: 600;
            border-bottom: 2px solid #e0e0e0;
        }

        .mini-table td {
            padding: 0.75rem 1rem;
            border-bottom: 1px solid #e0e0e0;
        }

        .mini-table tr:hover {
            background-color: #f9f9f9;
        }

        .view-all-btn {
            display: inline-block;
            margin-top: 1rem;
            width: 100%;
            text-align: center;
        }

        .empty-state {
            text-align: center;
            padding: 2rem;
            color: #999;
        }

        @media (max-width: 1024px) {
            .dashboard-grid {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .dashboard-header h1 {
                font-size: 2rem;
            }

            .stats {
                flex-direction: column;
            }

            .quick-actions {
                flex-direction: column;
            }

            .quick-actions .btn {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/list">Students</a></li>
        <li><a href="/add-user">Add Student</a></li>
        <li><a href="/product">Products</a></li>
        <li><a href="/product/add">Add Product</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </nav>

    <div class="dashboard-container">
        <div class="dashboard-header">
            <h1>ðŸ“Š Management Dashboard</h1>
            <p>Manage Students & Products in one place</p>
        </div>

        <div class="dashboard-grid">
            <!-- Students Section -->
            <div class="dashboard-section">
                <h2><span class="section-icon">ðŸ‘¥</span> Students</h2>
                
                <div class="stats">
                    <div class="stat-box">
                        <div class="stat-number"><%= students.length %></div>
                        <div class="stat-label">Total Students</div>
                    </div>
                </div>

                <div class="quick-actions">
                    <a href="/list" class="btn btn-primary">View All</a>
                    <a href="/add-user" class="btn add-btn">+ Add Student</a>
                </div>

                <% if (students && students.length > 0) { %>
                    <div class="table-container">
                        <table class="mini-table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Age</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% students.forEach(function(student) { %>
                                <tr>
                                    <td><%= student.name %></td>
                                    <td><%= student.email %></td>
                                    <td><%= student.age %></td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="empty-state">
                        <p>No students yet. <a href="/add-user">Add one now!</a></p>
                    </div>
                <% } %>

                <a href="/list" class="btn btn-primary view-all-btn">View All Students</a>
            </div>

            <!-- Products Section -->
            <div class="dashboard-section">
                <h2><span class="section-icon">ðŸ“¦</span> Products</h2>
                
                <div class="stats">
                    <div class="stat-box">
                        <div class="stat-number"><%= products.length %></div>
                        <div class="stat-label">Total Products</div>
                    </div>
                </div>

                <div class="quick-actions">
                    <a href="/product" class="btn btn-primary">View All</a>
                    <a href="/product/add" class="btn add-btn">+ Add Product</a>
                </div>

                <% if (products && products.length > 0) { %>
                    <div class="table-container">
                        <table class="mini-table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% products.forEach(function(product) { %>
                                <tr>
                                    <td><strong><%= product.name %></strong></td>
                                    <td>$<%= product.price %></td>
                                    <td><%= product.description ? product.description.substring(0, 30) + '...' : 'N/A' %></td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="empty-state">
                        <p>No products yet. <a href="/product/add">Add one now!</a></p>
                    </div>
                <% } %>

                <a href="/product" class="btn btn-primary view-all-btn">View All Products</a>
            </div>
        </div>
    </div>
</body>
</html>
